<div class="container">
  <div class="row">
    <div class="d-flex profile-container">
      <div class="profile-card">
        <div>
          <h3>Personal Info</h3>
          <p>Sam Stokes</p>
          <img class="avatar-large" alt="avatar" src="https://kitt.lewagon.com/placeholder/users/ssaunier" />
        </div>
        <div class="profile-content">
          <p>Info: I travel for business a couple times a month, and I appreciate the possibility to park my car at the airport hussle-free while making some money when I am away.</p>
          <p>Home Location: Amsterdam</p>
          <p>Review Score: 4.8</p>
        </div>
      </div>

      <div class="container manage-cars justify-content-center">
        <h2>Manage your cars</h2>
        <div class="index-car-card-grid ">
          <% @cars.each do |car| %>
          <div class="index-car-card-owner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path car.photo.attached? ? car.photo.key : "injcuuecln8fvf2vo2zg", width: 100, height: 100, crop: :fill, :cloud_name => "dir0nw4ok"%>');">
            <p><%= link_to "#{car.brand}", car_path(car.id) %></p>
            <%= link_to car_path(car), class: 'car-delete', method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class="fas fa-trash-alt"></i>
            <% end %>
          </div>
          <% end %>
        </div>

      </div>


    <h2>all your requests</h2>
        
    <% @my_cars_requests.each do |request|%>
    <div class="card-product">
      <%= cl_image_tag request.car.photo.attached? ? request.car.photo.key : "injcuuecln8fvf2vo2zg", width: 500, height: 350, crop: :fill, :cloud_name => "dir0nw4ok"%>
      <div class="card-product-infos">
        <h2>Car: <%=  request.car.brand %></h2>
        <p>Status: <%= request.status %></p>
        <p>Pickup date: <%= request.car.start_date%></p>
        <p>Return date: <%= request.car.end_date%></p> 
          <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#accept">
            accept
          </button>
          <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#decline">
            decline
          </button>
        </div>
      </div>

      <!-- Modal -->
      <div class="modal fade" id="accept" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              are you sure??
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
              <%= link_to "accept", accept_request_path(request), method: :post, class: "btn btn-primary btn-lg" %>
            </div>
          </div>
        </div>
      </div>


      <!-- Modal -->
      <div class="modal fade" id="decline" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              are you sure??
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
              <%= link_to "decline", decline_request_path(request), method: :post, class: "btn btn-primary btn-lg" %>
            </div>
          </div>
        </div>
      </div>


      <% end %>
      <%= link_to "add a car", new_car_path(request), class: "btn btn-primary", id: "upload_car" %>

 

    </div>

    <% end %>
    <%= link_to "rent a car!", dashboard_user_path(@user), class: "btn btn-primary btn-lg" %>
  </div>
</div>




