<h1>dashboard for owners</h1>
<%= link_to "rent a car!", dashboard_user_path(@user), class: "btn btn-primary btn-lg" %>

<h2>all your cars</h2>

<% @cars.each do |car|%>
<p><%= car.brand %></p>
<%= link_to "delete car", destroy_car_path(car), method: :delete, class: "btn btn-primary btn-lg" %>
<%= link_to "show", car_path(car), class: "btn btn-primary btn-lg" %>

<% end %>

<h2>all your requests</h2>
<% @my_cars_requests.each do |request|%>

<p><%= request.car_id %></p>
<p><%= request.status %></p>
<%= link_to "delete request", destroy_request_path(request), method: :delete, class: "btn btn-primary btn-lg" %>

<% end %>
<br>


<!-- potential link for adding new car, does not work wel as it redirects to index function of cars afterwards -->
<%= link_to "upload new car", new_car_path(request), class: "btn btn-primary btn-lg" %>


