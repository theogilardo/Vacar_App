<div class="container">
  <div class="row" id="intro">
      <h1>Details of your car</h1>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <p>Brand: <%= @car.brand %></p>
      <p>Model: <%= @car.model %></p>
      <p>Year: <%= @car.year %></p>
      <p>Price: â‚¬ <%= @car.price %></p>
      <p>Number of seats: <%= @car.number_of_seats %></p>
      <p>Registration Number: <%= @car.registration_number %></p>
      <p>Transmission: <%= @car.transmission %></p>
      <p>Air Conditionning: <%= @car.airconditioning %></p>
    </div>
    <div class="col-sm-6" >
      <%= cl_image_tag @car.photo.attached? ? @car.photo.key : "injcuuecln8fvf2vo2zg", width: 400, height: 300, crop: :fill, :cloud_name => "dir0nw4ok"%>
    </div>
  </div>
  <%= link_to car_path(@car), method: :delete, data: { confirm: "Are you sure?" } do %>
  <i class="fas fa-trash-alt"></i>
  <% end %>
  <%= link_to "Update",  edit_car_path, {class: "btn btn-primary"} %>
</div>
