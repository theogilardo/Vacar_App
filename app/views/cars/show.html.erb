<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
      <h1>Details of your car</h1>
        <p><%= @car.brand %></p>
        <p><%= @car.model %></p>
        <p><%= @car.year %></p>
        <p><%= @car.number_of_seats %></p>
        <p><%= @car.registration_number %></p>
        <p><%= @car.transmission %></p>
        <p><%= @car.airconditioning %></p>
        <%= f.input :photo, as: :file %>

        <%= link_to car_path(@car), method: :delete, data: { confirm: "Are you sure?" } do %>
        <i class="fas fa-trash-alt"></i>
        <% end %>
        <%= cl_image_tag("injcuuecln8fvf2vo2zg",
              width: 400, height: 300, crop: :fill) %>

        <%= link_to "Update",  edit_car_path, {class: "btn btn-primary"} %>

    </div>
  </div>
</div>
