<div class="container mt-5">
  <div class="grid">
  <!--   <div class="box box0">
      <h1>Details of your car</h1>
    </div> -->
    <div class="box box1">
      <p><%= @car.brand %> <%=@car.model%> (<%=@car.year%>)</p>
      <% 5.times do %>
      <i class="fa fa-star"></i>
      <% end %>
      <p>â‚¬<%= @car.price %></p>
      <div class="nested mt-3">
        <div>
          <p class="car_components">AC</p>
          <% if @car.airconditioning == true %>
          <span>Yes</span>
          <% else %>
          <span>No</span>
          <% end %>
        </div>
        <div>
          <p class="car_components">Seats</p>
          <h6><%= @car.number_of_seats %></h6>
        </div>
        <div>
          <p class="car_components">Transmission</p>
          <h6><%= @car.transmission.capitalize %></h6>
        </div>
      </div>
      <img src="" alt="">
      <img src="" alt="">
    </div>

    <div class="show_car_img box box2">
      <%= cl_image_tag @car.photo.attached? ? @car.photo.key : "injcuuecln8fvf2vo2zg", width: 500, height: 350, crop: :fill, :cloud_name => "dir0nw4ok"%>
    </div>

    <div class="btn-box1">
      <% if current_user == @car.user %>
      <%= link_to "Update",  edit_car_path, {class: "btn btn-primary"} %>
      <%= link_to "Delete", car_path(@car), class: "btn btn-primary", method: :delete, data: { confirm: "Are you sure?"} %>
      <%= link_to "Back",  cars_path, {class: "btn btn-primary"} %>
      <% else %>
      <%= link_to "Back",  cars_path, {class: "btn btn-outline-warning text-dark"} %>
      <%= link_to "Request Now",  new_car_request_path(@car), {class: "btn btn-success request-btn"} %>
      <% end %>
    </div>

    <div class="box3">
      <div class="cards_review">
        <% @reviews.each do |review| %>
        <div class="card-review">
          <% counter = 0 %>
          <% 5.times do %>
          <i class="fa <%= review.rating > counter ? 'fa-star' : 'fa-star-o' %>"></i>
          <% counter += 1 %>
          <% end %>
        <h6><%= review.text %></h6>
        </div>
       <% end %>
      </div>
      <h2>
        <%= pluralize @car.reviews.size, "review" %>
      </h2>
      <div id="reviews">
        <%  if @car.reviews.blank? %>
          Be the first to leave a review for <%= @car.brand %> <%=@car.model %> !!
          <% else %>
          <% @car.reviews each do |review| %>
          <p> review.text </p>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>












