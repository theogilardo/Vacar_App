<div class="container">
  <div class="text-center mt-3">
    <h1 class ="title">Cars List</h1>
    <h5>The car you choose. No counters, no queues, no hidden extras</h1>
    <h5>Rent cars from people like you</h5>
    <form  action="/cars" method="get">
      <div class="row col-10 offset-1 mt-4">
        <div class="col-3">
          <select class="form-control" name="location" >
            <option value="" disabled>Select Location</option>
            <option value="" ></option>
            <%=  @locations.each do |location| %>
            <option <%= params[:location] == location ? "selected" : "" %>> <%= location %> </option>
            <% end %>
          </select>
        </div>
        <div class="col-3">
          <input type="date" class="form-control" id="start_date" name='start_date' value= "<%= params[:start_date] %>">
        </div>
        <div class="col-3">
          <input type="date" class="form-control" id="end_date" name='end_date' value= "<%= params[:end_date]%>">
        </div>
        <div class="col-3">
          <button type="submit" id="test-btn" class="btn btn-primary">Search</button>
        </div>
      </div>
    </form>
  </div>
  <div class="container">
    <div class="car-grid">
      <% @cars.each do |car| %>
        <%= link_to car_path(car.id) do %>
          <div class="index-car-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path car.photo.attached? ? car.photo.key : "injcuuecln8fvf2vo2zg", width: 400, height: 300, crop: :fill, :cloud_name => "dir0nw4ok"%>');">
            <h3 class="brand-car"><%= car.brand %></h3>
            <h4 class="price-card"> â‚¬ <%= car.price %></h4>
            <i class="car-seats-logo"><%= image_tag "car.png" %>
              <%= car.number_of_seats %></i>
              <i class="map-pin-logo fas fa-map-marker-alt">  <%= car.location %></i>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
